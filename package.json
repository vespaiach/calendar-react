{
    "name": "calendar_ui",
    "version": "1.0.0",
    "source": "src/index.ts",
    "main": "dist/index.js",
    "module": "dist/index.esm.js",
    "umd:main": "dist/index.umd.js",
    "unpkg": "dist/index.umd.js",
    "exports": {
        ".": {
            "require": "./dist/index.js",
            "import": "./dist/index.esm.js",
            "umd": "./dist/index.umd.js"
        },
        "./package.json": "./package.json"
    },
    "scripts": {
        "clean": "rimraf dist",
        "dev": "vite",
        "build": "npm run clean && microbundle --jsx React.createElement --css-modules false",
        "lint": "eslint src/**"
    },
    "keywords": [
        "calendar",
        "react"
    ],
    "author": "nta.toan@gmail.com",
    "license": "MIT",
    "devDependencies": {
        "@types/react": "^18.0.13",
        "@types/react-dom": "^18.0.5",
        "@types/react-transition-group": "^4.4.4",
        "@types/styled-components": "^5.1.25",
        "@typescript-eslint/eslint-plugin": "^5.28.0",
        "@typescript-eslint/parser": "^5.28.0",
        "@vitejs/plugin-react": "^1.3.2",
        "eslint": "^8.17.0",
        "eslint-import-resolver-typescript": "^2.7.1",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-react": "^7.30.0",
        "microbundle": "^0.15.0",
        "postcss": "^8.4.14",
        "postcss-import": "^14.1.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "rimraf": "^3.0.2",
        "tailwindcss": "^3.1.4",
        "typescript": "^4.7.3",
        "vite": "^2.9.12",
        "vite-plugin-eslint": "^1.6.1",
        "react-transition-group": "^4.4.2"
    },
    "peerDependencies": {
        "react": ">=17.0.0"
    },
    "postcss": {
        "plugins": {
            "postcss-import": {},
            "tailwindcss": {
                "content": [
                    "./src/**/*.tsx"
                ],
                "theme": {
                    "colors": {
                        "line": "rgb(var(--mv-color-grid-line) / <alpha-value>)",
                        "sheet": "rgb(var(--mv-color-background) / <alpha-value>)",
                        "dimmed-text": "rgb(var(--mv-color-dimmed-text) / <alpha-value>)",
                        "grayed-out": "rgb(var(--mv-color-dimmed-text) / 0.7)",
                        "today": "rgb(var(--mv-color-today-circle) / <alpha-value>)",
                        "light-text": "rgb(var(--mv-color-light-text) / <alpha-value>)",
                        "normal-text": "rgb(var(--mv-color-normal-text) / <alpha-value>)",
                        "event-dot": "rgb(var(--mv-color-event-dot) / <alpha-value>)"
                    },
                    "extend": {
                        "fontFamily": {
                            "inter": "\"Inter\", sans-serif;"
                        }
                    }
                },
                "plugins": []
            }
        }
    }
}
