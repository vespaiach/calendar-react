{
    "name": "calendar_ui",
    "version": "1.0.0",
    "source": "src/calendar.tsx",
    "main": "dist/calendar.js",
    "module": "dist/calendar.esm.js",
    "umd:main": "dist/calendar.umd.js",
    "unpkg": "dist/calendar.umd.js",
    "exports": {
        ".": {
            "require": "./dist/calendar.js",
            "import": "./dist/calendar.esm.js",
            "umd": "./dist/calendar.umd.js"
        },
        "./package.json": "./package.json",
        "./dist/calendar.css": "./dist/calendar.css"
    },
    "scripts": {
        "clean": "rimraf dist",
        "dev": "vite",
        "style": "postcss -m --use autoprefixer --use postcss-minify -d dist ./src/*.css",
        "build": "npm run clean && microbundle --jsx React.createElement --css-modules false && npm run style",
        "lint": "eslint src/**",
        "tw": "npx tailwindcss -i ./src/calendar.style -o ./src/calendar.css --watch"
    },
    "keywords": [
        "calendar",
        "react"
    ],
    "author": "nta.toan@gmail.com",
    "license": "MIT",
    "devDependencies": {
        "@types/react": "^18.0.13",
        "@types/react-dom": "^18.0.5",
        "@types/react-transition-group": "^4.4.4",
        "@types/styled-components": "^5.1.25",
        "@typescript-eslint/eslint-plugin": "^5.28.0",
        "@typescript-eslint/parser": "^5.28.0",
        "@vitejs/plugin-react": "^1.3.2",
        "eslint": "^8.17.0",
        "eslint-import-resolver-typescript": "^2.7.1",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-react": "^7.30.0",
        "microbundle": "^0.15.0",
        "postcss": "^8.4.14",
        "postcss-import": "^14.1.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "rimraf": "^3.0.2",
        "tailwindcss": "^3.1.4",
        "typescript": "^4.7.3",
        "vite": "^2.9.12",
        "vite-plugin-eslint": "^1.6.1"
    },
    "peerDependencies": {
        "react": ">=17.0.0"
    },
    "dependencies": {
        "react-transition-group": "^4.4.2",
        "styled-components": "^5.3.5"
    },
    "postcss": {
        "plugins": {
            "postcss-import": {},
            "tailwindcss": {}
        }
    }
}
